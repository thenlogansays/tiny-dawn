<link rel="stylesheet" href="{{ 'component-te-rte.css' | asset_url }}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="{{ 'section-te-features-basic.css' | asset_url }}" media="print" onload="this.media='all'">

<noscript>{{ 'component-te-rte.css' | asset_url | stylesheet_tag }}</noscript>
<noscript>{{ 'section-te-features-basic.css' | asset_url | stylesheet_tag }}</noscript>

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="isolate{% unless section.settings.full_width %} page-width{% endunless %}">
  <div class="rich-text content-container {{ section.settings.color_scheme }} {% if section.settings.full_width %} rich-text--full-width content-container--full-width{% endif %} section-{{ section.id }}-padding">
    <div>
      {% unless section.settings.section_title == blank %}
        <h1 class="center">{{ section.settings.section_title }}</h1>
      {% endunless %}
      {% unless section.settings.section_text == blank %}
        <p>{{ section.settings.section_text }}</p>
      {% endunless %}
    </div>
    <div class="rich-text__blocks">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'heading' -%}
            <h2 class="{{ block.settings.heading_size }}" {{ block.shopify_attributes }}>
              {{ block.settings.heading | escape }}
            </h2>
          {%- when 'text' -%}
            <div class="rich-text__text rte" {{ block.shopify_attributes }}>{{ block.settings.text }}</div>
          {%- when 'button' -%}
            <a
              {% if block.settings.button_link == blank %}
                role="link" aria-disabled="true"
              {% else %}
                href="{{ block.settings.button_link }}"
              {% endif %}
              class="te-button te-button--{{ block.settings.color }}{% if block.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}"
              {{ block.shopify_attributes }}
            >
              {{ block.settings.button_label | escape }}
            </a>
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "TE-Features Basic",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "te-color-default",
          "label": "t:sections.all.colors.te-color-default.label"
        },
        {
          "value": "te-color-cream-dark",
          "label": "t:sections.all.colors.te-color-cream-dark.label"
        },
        {
          "value": "te-color-teal-light",
          "label": "t:sections.all.colors.te-color-teal-light.label"
        },
        {
          "value": "te-color-teal-dark",
          "label": "t:sections.all.colors.te-color-teal-dark.label"
        },
        {
          "value": "te-color-silver-light",
          "label": "t:sections.all.colors.te-color-silver-light.label"
        },
        {
          "value": "te-color-silver-dark",
          "label": "t:sections.all.colors.te-color-silver-dark.label"
        },
        {
          "value": "te-color-black-white",
          "label": "t:sections.all.colors.te-color-black-white.label"
        }
      ],
      "default": "te-color-default",
      "label": "t:sections.all.colors.label"
    },

    {
      "type": "checkbox",
      "id": "full_width",
      "default": true,
      "label": "t:sections.te-features-basic.settings.full_width.label"
    },

    {
      "type": "richtext",
      "id": "section_title",
      "label": "Section Title",
      "default": "<p>Basic Features Section</p>"
    },

    {
      "type": "textarea",
      "id": "section_text",
      "label": "Section Text",
      "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Bibendum ut tristique et egestas. Ut ornare lectus sit amet est placerat in egestas erat."
    },

    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },

    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
    },

    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 52
    }
  ],

  "blocks": [
    {
      "type": "feature_card",
      "name": "Feature Card",
      "limit": 6,
      "settings": [
        {
          "type": "select",
          "id": "icon_select",
          "label": "Icon",
          "options": [
            {
              "value": "icon1",
              "label": "Icon 1"
            },
            {
              "value": "icon2",
              "label": "Icon 2"
            },
            {
              "value": "icon3",
              "label": "Icon 3"
            },
            {
              "value": "icon4",
              "label": "Icon 4"
            },
            {
              "value": "icon5",
              "label": "Icon 5"
            },
            {
              "value": "icon6",
              "label": "Icon 6"
            }
          ],
          "default": "icon1"
        },

        {
          "type": "inline_richtext",
          "id": "card_title",
          "default": "My <i>card</i> <b>title</b>",
          "label": "Card Title"
        },

        {
          "type": "textarea",
          "id": "card_text",
          "label": "Card text",
          "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Aenean euismod elementum nisi quis eleifend quam adipiscing. Sollicitudin nibh sit amet commodo nulla facilisi nullam vehicula."
        }
      ]
    }
  ],

  "presets": [
    {
      "name": "TE-Features Basic",
      "blocks": [
        {
          "type": "feature_card",
          "type": "feature_card",
          "type": "feature_card"
        }
      ]
    }
  ]
}
{% endschema %}
