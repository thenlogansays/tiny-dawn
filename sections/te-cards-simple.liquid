{{ 'section-te-cards-simple.css' | asset_url | stylesheet_tag }}

<noscript>{{ 'section-te-cards-simple.css' | asset_url | stylesheet_tag }}</noscript>

<div
  class="color--{{ section.settings.color_scheme }} te-section-container--full-width"
  data-section-type="{{ section.settings.name }}"
  data-section-id="{{ section.id }}"
>
  <h2>Cards</h2>
</div>

{% schema %}
{
  "name": "TE- Cards Simple",
  "tag": "section",
  "class": "te-section-container",
  "settings": [
    {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "te-color-default",
          "label": "t:sections.all.colors.te-color-default.label"
        },
        {
          "value": "te-color-cream-dark",
          "label": "t:sections.all.colors.te-color-cream-dark.label"
        },
        {
          "value": "te-color-teal-light",
          "label": "t:sections.all.colors.te-color-teal-light.label"
        },
        {
          "value": "te-color-teal-dark",
          "label": "t:sections.all.colors.te-color-teal-dark.label"
        },
        {
          "value": "te-color-silver-light",
          "label": "t:sections.all.colors.te-color-silver-light.label"
        },
        {
          "value": "te-color-silver-dark",
          "label": "t:sections.all.colors.te-color-silver-dark.label"
        },
        {
          "value": "te-color-black-white",
          "label": "t:sections.all.colors.te-color-black-white.label"
        }
      ],
      "default": "te-color-default",
      "label": "t:sections.all.colors.label"
    }
  ],
  "blocks": [
    {
      "type": "block--headings",
      "name": "Section headings",
      "settings": [
        {
          "type": "richtext",
          "id": "title",
          "label": "Section title",
          "default": "<p>Need something?</p>"
        },
        {
          "type": "richtext",
          "id": "subtitle",
          "label": "Section subtitle",
          "default": "<p>We are here to help</p?>"
        }
      ]
    },
    {
      "type": "block--card",
      "name": "Section Card",
      "settings": [
        {
          "type": "richtext",
          "id": "block--card_title",
          "label": "Card title",
          "default": "<p>Card title</p>"
        },
        {
          "type": "textarea",
          "id": "block--primary-text",
          "label": "Primary text",
          "default": "hello@tinyearthtoys.com"
        },
        {
          "type": "textarea",
          "id": "block--secondary-text",
          "label": "Secondary text",
          "default": "Phasellus rhoncus augue non felis."
        },
        {
          "type": "select",
          "id": "block--icon-select",
          "label": "Icon",
          "options": [
            {
              "value": "icon_a",
              "label": "Icon A"
            },
            {
              "value": "icon_b",
              "label": "Icon B"
            },
            {
              "value": "icon_c",
              "label": "Icon D"
            },
            {
              "value": "icon_d",
              "label": "Icon D"
            }
          ],
          "default": "icon_a"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "TE Cards - Simple",
      "blocks": [
        {
          "type": "block--headings"
        },
        {
          "type": "block--card"
        },
        {
          "type": "block--card"
        },
        {
          "type": "block--card"
        }
      ]
    }
  ]
}
{% endschema %}

